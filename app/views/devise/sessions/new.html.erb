<%# app/views/devise/sessions/new.html.erb %>
<h2 class="text-center mb-4"><%= tdb('site.login') %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <% if resource.errors[:base].any? %>
    <div class="alert alert-danger">
      <% resource.errors[:base].each do |error| %>
        <div><%= error %></div>
      <% end %>
    </div>
  <% end %>

  <div class="form-group mb-3">
    <%= f.label :email, class: 'form-label' %>
    <%= f.email_field :email, autofocus: true, class: "form-control #{resource.errors[:email].any? ? 'is-invalid' : ''}", placeholder: tdb('site.enter_email') %>
    <% if resource.errors[:email].any? %>
      <div class="invalid-feedback d-block">
        <% resource.errors[:email].each do |error| %>
          <div><%= error %></div>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :password, class: 'form-label' %>
    <%= f.password_field :password, autocomplete: "off", class: "form-control #{resource.errors[:password].any? ? 'is-invalid' : ''}", placeholder: tdb('site.enter_password') %>
    <% if resource.errors[:password].any? %>
      <div class="invalid-feedback d-block">
        <% resource.errors[:password].each do |error| %>
          <div><%= error %></div>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="form-group text-center">
    <%= f.submit tdb('site.login'), class: 'btn btn-primary w-100' %>
  </div>
<% end %>

<div class="mt-3">
  <%= render "devise/shared/links" %>
</div>
