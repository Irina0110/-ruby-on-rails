<%# app/views/devise/registrations/new.html.erb %>
<h2 class="text-center mb-4"><%= tdb('site.signup') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="form-group mb-3">
    <%= f.label :email, class: 'form-label' %>
    <%= f.email_field :email, autofocus: true, class: "form-control #{resource.errors[:email].any? ? 'is-invalid' : ''}", placeholder: tdb('site.enter_email') %>
    <% if resource.errors[:email].any? %>
      <div class="invalid-feedback d-block">
        <% resource.errors[:email].each do |error| %>
          <div><%= error %></div>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :password, class: 'form-label' %>
    <%= f.password_field :password, class: "form-control #{resource.errors[:password].any? ? 'is-invalid' : ''}", placeholder: tdb('site.enter_password') %>
    <% if resource.errors[:password].any? %>
      <div class="invalid-feedback d-block">
        <% resource.errors[:password].each do |error| %>
          <div><%= error %></div>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :password_confirmation, class: 'form-label' %>
    <%= f.password_field :password_confirmation, class: "form-control #{resource.errors[:password_confirmation].any? ? 'is-invalid' : ''}", placeholder: tdb('site.enter_password_confirmation') %>
    <% if resource.errors[:password_confirmation].any? %>
      <div class="invalid-feedback d-block">
        <% resource.errors[:password_confirmation].each do |error| %>
          <div><%= error %></div>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="form-group text-center">
    <%= f.submit tdb('site.signup_button'), class: 'btn btn-success w-100' %>
  </div>
<% end %>

<div class="mt-3">
  <%= render "devise/shared/links" %>
</div>
