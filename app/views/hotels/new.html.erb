<div class="container mt-5" style="max-width: 600px;">
  <div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
      <h2 class="mb-0"><%= tdb('main.add_hotel') %></h2>
    </div>
    <div class="card-body">
      <%= form_with model: @hotel, local: true, html: { multipart: true, class: "needs-validation" } do |f| %>
        <div class="mb-3">
          <%= f.label :name, tdb('hotel.name'), class: "form-label" %>
          <%= f.text_field :name, class: "form-control", required: true %>
        </div>
        <div class="mb-3">
          <%= f.label :country_id, tdb('hotel.country'), class: "form-label" %>
          <%= f.collection_select :country_id, Country.all, :id, :name, { prompt: tdb('hotel.select_country') }, { class: "form-select", required: true } %>
        </div>
        <div class="mb-3">
          <%= f.label :city_id, tdb('hotel.city'), class: "form-label" %>
          <%= f.collection_select :city_id, City.all, :id, :name, { prompt: tdb('hotel.select_city') }, { class: "form-select", required: true, disabled: true, id: "hotel_city_id" } %>
        </div>
        <div class="mb-3">
          <%= f.label :description, tdb('hotel.description'), class: "form-label" %>
          <%= f.text_area :description, class: "form-control", rows: 4, required: true %>
        </div>
        <div class="mb-3">
          <%= f.label :images, tdb('hotel.images'), class: "form-label" %>
          <%= file_field_tag "hotel[images][]", multiple: true, class: "form-control" %>
          <div class="form-text"><%= tdb('hotel.select_multiple_files') %></div>
        </div>
        <div class="d-grid gap-2">
          <%= f.submit tdb('hotel.create'), class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>
      <div class="mt-3">
        <%= link_to tdb('hotel.back'), root_path(locale: I18n.locale), class: "btn btn-outline-secondary" %>
      </div>
    </div>
  </div>
</div>

<div id="js-i18n"
     data-select-country="<%= tdb('hotel.select_country') %>"
     data-loading-cities="<%= tdb('hotel.loading_cities') %>"
     data-select-city="<%= tdb('hotel.select_city') %>">
</div> 